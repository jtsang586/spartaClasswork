<title><%= @book[:id] %></title>
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1><%= @book[:title] %></h1>
            <p><%= @book[:author] %></p>
            <p><%= @book[:blurb] %></p>
            <a href="/<%= @book[:id] %>/edit">Edit</a>
            <form action="/<%= @book[:id] %>" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" name="name" value="Delete">
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
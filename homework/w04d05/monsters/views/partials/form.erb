<form action="/<%= @monster.id %>" method="POST">
	<div class="form-group">
		<% if (@monster.id != "") %>
			<input type="hidden" name="_method" value="PUT">
		<% end %>
		<div>
			<label>Name</label>
			<input type="text" class="form-control" name="title" placeholder="Enter monster name" value="<%= @monster.title %>">
		</div>
		<div>
			<label>Content</label>
			<textarea name="description" class="form-control" placeholder="The description"><%= @monster.description %></textarea>
		</div>
		<div>
			<input type="submit" name="Save monter entry">
		</div>
		
	</div>
</form>